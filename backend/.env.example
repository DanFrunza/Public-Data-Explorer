# Database connection for Docker Compose network
DB_HOST=postgres
DB_USER=postgres
DB_PASS=postgres
DB_NAME=public_data

# Comma-separated list of allowed frontend origins for CORS
# Example: http://localhost:5173,http://localhost:3000
CORS_ALLOWED_ORIGINS=

# Auth (set strong secrets/timing in production)
JWT_ACCESS_SECRET=
# e.g., 15m, 1h (default 15m if unset)
ACCESS_TOKEN_TTL=15m
# e.g., 7d, 30d (default 7d if unset)
REFRESH_TOKEN_TTL=7d

# MinIO (S3-compatible object storage)
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET=avatars

# World Bank ingest window (optional overrides)
WB_START_YEAR=1990
# WB_END_YEAR defaults to current year when unset
# WB_END_YEAR=2024
